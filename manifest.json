{
    "manifest_version": 3,
    "name": "WebKarma",
    "version": "0.0.1",
    "version_name": "0.0.11a",
    "description": "Extension du service WebKarma",
    "permissions": [
        "identity",
        "storage", 
        "activeTab", 
        "notifications", 
        "webNavigation", 
        "tabs", 
        "identity"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "WebKarma"
    },
    "icons": {
        "16": "assets/icons/logo16.png",
        "32": "assets/icons/logo32.png",
        "48": "assets/icons/logo48.png",
        "128": "assets/icons/logo128.png"
    },
    "oauth2": {
        "client_id": "ID du client OAuth 2.0",
        "scopes": ["https://www.googleapis.com/auth/userinfo.email"]
    },
    "background": {
        "service_worker": "background.js"
    }
  }